---
layout: base
---
<div class="px-3">
  <main>
    <div class="max-w-3xl mx-auto">
      {{ content | safe }}
    </div>
    <h2>Za≈Çoga</h2>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 max-w-screen-xl mx-auto">
      {% for item in zaloga %}
        <div class="bg-white px-5 pt-8">
          {% if item.fot %}
            <img src="/img/{{ item.fot }}" alt="{{ item.kto }}" class="w-40 mx-auto mt-6 mb-12 transform -rotate-12 border-red border-4" width="190" height="190" loading="lazy">
          {% endif %}
          <h3 class="text-xl">{{ item.kto }}</h3>
          {% if item.bio %}
            <div class="text-base">
              {{ item.bio | markdownify | safe }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </main>
</div>